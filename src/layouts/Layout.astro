---
import "@fontsource/inter";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";
import "@fontsource/inter/900.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/codigo.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="PrograWebs desarrolla aplicaciones web y móviles con tecnologías modernas y de alta calidad."
    />
    <meta
      name="keywords"
      content="PrograWebs, desarrollo web, desarrollo móvil, tecnologías modernas, alta calidad"
    />
    <meta name="author" content="PrograWebs" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        font-family: Inter;
        background-color: #26272b;
        overflow-x: hidden;
        scroll-behavior: smooth;
      }

      [id] {
        scroll-margin-top: 4.5rem;
      }
    </style>
  </body>
</html>
